<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".DistributorLoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/gradient_yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="70dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/logo_circle_black"
                android:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/maven_pro_regular"
                android:text="@string/distributor_login"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="190dp"
            android:background="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="353dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/maven_pro_medium"
                    android:text="@string/email_admin"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <EditText
                        android:id="@+id/etemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:autofillHints=""
                        android:background="#00000000"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="30sp"
                        tools:ignore="LabelFor,TextFields" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="19.3dp"
                    android:fontFamily="@font/maven_pro_medium"
                    android:text="@string/password"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <EditText

                        android:id="@+id/etpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:autofillHints=""
                        android:background="#00000000"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="30sp"
                        tools:ignore="LabelFor,TextFields" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <Button
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rect_yellow1"
                        android:fontFamily="@font/maven_pro_bold"
                        android:gravity="center"
                        android:onClick="submit_admin"
                        android:text="@string/login"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maven_pro_regular"
            android:text="@string/new_user_admin"
            android:textColor="#4a4a4a"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/tv_newuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginplus3"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="@string/sign_up"
            android:textColor="#4a4a4a"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginplus3"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/maven_pro_regular"
            android:text="@string/for_a_new_account"
            android:textColor="#4a4a4a"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>


