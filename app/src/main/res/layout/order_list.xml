<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/marginplus3"
    >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/l1"
        >
    <TextView
        android:id="@+id/tvsr_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_no"
        android:textColor="@color/text"
        android:textSize="@dimen/marginplus4"/>

    <TextView
        android:id="@+id/tvsalesman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/salesman"
        android:textColor="@color/text"
        android:textSize="@dimen/marginplus3"/>

    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Order_address"
        android:textColor="@color/text"
        android:textSize="@dimen/text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="@string/Order_time"
            android:textColor="@color/text"
            android:textSize="@dimen/marginplus3"/>

        <Button
            android:id="@+id/btnview_order"
            style="@android:style/Widget.DeviceDefault.Light.Button"
            android:background="@drawable/rectgreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/view"
            android:textAlignment="center"
            android:textColor="#fff" />
    </LinearLayout>


</RelativeLayout>