<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".AddOrderActivity">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginplus3"
            android:fontFamily="@font/poppins_light"
            android:text="@string/new_order"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:orientation="vertical"
            android:padding="@dimen/marginplus5">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="@string/select_customer"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_select_customer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="@dimen/marginplus3"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:minHeight="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="@string/mobile_no"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvmob"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:hint="@string/_2453153425"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:minHeight="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="@string/address_"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvaddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:hint="@string/gk_nagar_nandgaon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="@string/select_product"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_select_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="@dimen/marginplus3"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:minHeight="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="@string/price"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:hint="@string/_5000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="@string/assign_order_to"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_select_salesman"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="@dimen/marginplus3"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="@string/salesman_id"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_sales_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_light"
                    android:hint="@string/salesman_id"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="@string/time"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:autofillHints=""
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:hint="@string/time__"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_select_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginplus1"
                    android:layout_weight="1"
                    android:elevation="@dimen/marginplus3"
                    android:entries="@array/Time_Slot"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:textSize="50sp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/marginplus5"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/poppins_light"
                android:onClick="submit_order"
                android:padding="@dimen/marginplus2"
                android:text="@string/add_order"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>