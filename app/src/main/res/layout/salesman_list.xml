<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/marginplus3">

    <TextView
        android:id="@+id/tvname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/text"
        android:textSize="@dimen/text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvmob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mobile"
            android:textColor="@color/text"
            android:textSize="@dimen/text" />

        <Button
            android:id="@+id/i_btnview_salesman"
            style="@android:style/Widget.DeviceDefault.Light.Button"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/marginplus5"
            android:background="@drawable/rect2"
            android:gravity="center"
            android:text="i"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:background="@drawable/rect_grayoutline1"
            android:padding="3dp">

            <EditText
                android:id="@+id/et_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/copy_amp_paste_location_url_link_shared_by_salesman"
                android:lines="2"
                android:textSize="@dimen/marginplus2" />
        </LinearLayout>

        <Button
            android:id="@+id/btnget_location"
            style="@android:style/Widget.DeviceDefault.Light.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marginplus3"
            android:layout_weight="1"
            android:background="@drawable/rectgreen"
            android:gravity="center"
            android:padding="@dimen/marginplus1"
            android:text="@string/get_location"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>