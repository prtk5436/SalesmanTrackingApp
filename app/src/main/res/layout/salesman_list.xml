<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginplus4"
        android:layout_marginEnd="@dimen/marginplus4"
        android:background="#ffff"
        android:layout_marginBottom="@dimen/marginplus4"
        android:elevation="@dimen/marginplus1"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/marginplus1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginplus3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_light"
                android:layout_marginEnd="@dimen/marginplus3"
                android:text="@string/products"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/tvprice"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/poppins_light"
                android:text="@string/dollar"
                android:textColor="@color/text"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>